<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.saxion.lh.persistent">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.WinnerActivity" android:screenOrientation="portrait" />
        <activity android:name=".Activity.AboutActivity" android:screenOrientation="portrait" />
        <activity android:name=".Activity.UserDataActivity" android:screenOrientation="portrait" />
        <activity android:name=".Activity.LogInActivity" android:screenOrientation="portrait" />
        <activity android:name=".Activity.RegisterActivity" android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.CodeChallengeActivity"
            android:label="@string/title_activity_code_challenge"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait" />
        <activity android:name=".Activity.MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>